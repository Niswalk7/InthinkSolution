@model IEnumerable<InthinkSolution.Models.User>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/dashboard.css">
    <title>Admin Dashboard</title>
</head>
<body>
    <div class="dashboard-container">
        <h1>Welcome, Admin!</h1>
        @if(ViewData["Content"]!=null)
        {
            <p>@ViewData["Content"]</p>

        }
        else
        {
        <div class="actions">
            <button onclick="location.href='@Url.Action("CreateUser", "Admin")'">Create User</button>
            <button onclick="location.href='@Url.Action("DeleteUser", "Admin")'">Delete User</button>
        </div>
        <div>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>User Name</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Role</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var user in Model)
                    {
                        <tr>
                        <td>@user.Id</td>
                        <td>@user.Username</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Role</td>
                        <td>@user.Email</td>
                        <td>
                            <a href="@Url.Action("EditUser","Admin",new {id=user.Id})" class="btn btn-warning">Edit</a>
                            <button class="btn btn-danger" onclick="confirmDelete('@Url.Action("DeleteUser","Admin", new {id=user.Id})')">Delete</button>
                        </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        }
    </div>

</body>
</html>
